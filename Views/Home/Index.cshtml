                <div class="contact-form-container">
                    <form id="contactForm" class="contact-form" asp-controller="Home" asp-action="Contact" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
